{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": true,
    "module": "none",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": ["es6"]
  },
  "exclude": [
    "./node_modules",
    "./dist/**/*",
  ]
}
